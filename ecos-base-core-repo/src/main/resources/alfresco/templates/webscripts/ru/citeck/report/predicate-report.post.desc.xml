<webscript>
    <shortname>Predicate Report</shortname>
    <description>Search data by predicate and produce a report in different formats</description>
    <url>/report/predicate-report</url>
    <format default="html"/>
    <authentication>user</authentication>
    <transaction allow="readonly">required</transaction>
    <responses>
        <response>
            <format>html</format>
            <type>HTML</type>
        </response>
        <response>
            <format>pdf</format>
            <type>PDF</type>
        </response>
        <response>
            <format>docx</format>
            <type>DOCX</type>
        </response>
        <response>
            <format>xlsx</format>
            <type>XLSX</type>
        </response>
    </responses>
</webscript>
